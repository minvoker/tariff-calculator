{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Canonical Tariff Schema (Sprint-1)",
  "type": "object",
  "required": [
    "provider",
    "tariff_code",
    "version",
    "effective_from",
    "time_zones",
    "time_bands",
    "components"
  ],
  "additionalProperties": false,
  "properties": {
    "provider": { "type": "string", "minLength": 1 },
    "tariff_code": { "type": "string", "minLength": 1 },
    "version": { "type": "string" },
    "effective_from": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "effective_to": { "type": ["string","null"], "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "time_zones": { "type": "string" },
    "meta": { "type": "object" },
    "time_bands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "days", "times"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "days": {
            "type": "array",
            "items": { "type": "string", "enum": ["mon","tue","wed","thu","fri","sat","sun","all"] }
          },
          "times": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["from", "to"],
              "properties": {
                "from": { "type": "string", "pattern": "^([01]\\d|2[0-3]):([0-5]\\d)$" },
                "to": { "type": "string", "pattern": "^([01]\\d|2[0-3]):([0-5]\\d)$" }
              }
            }
          },
          "date_ranges": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["from","to"],
              "properties": {
                "from": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
                "to": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
              }
            }
          }
        }
      }
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id","label","category","unit","applies_to","rate_schedule","calculation"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "category": { "type": "string" },
          "unit": { "type": "string" },
          "applies_to": { "type": "array", "items": { "type": "string" } },
          "rate_schedule": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "from": { "type": ["number","null"] },
                "to": { "type": ["number","null"] },
                "value": { "type": "number" }
              },
              "required": ["value"],
              "additionalProperties": false
            }
          },
          "loss_factor": { "type": ["number","null"] },
          "rolling_window": {
            "type": "object",
            "properties": {
              "months": { "type": "integer" },
              "interval_minutes": { "type": "integer" }
            },
            "additionalProperties": false
          },
          "season": {
            "type": "object",
            "properties": {
              "from": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
              "to": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
            }
          },
          "calculation": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
